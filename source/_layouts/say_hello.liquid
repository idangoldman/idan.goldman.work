---
layout: default
---

<!-- Say Hello -->
<main id="say-hello" class="container">
  <div class="row is-aligned-center"><div class="ten column">

    <!-- Content -->
    {% include content.liquid title=page.title content=content %}

    <!-- Contact -->
    <form id="contact-form"
      name="contact-form" action="/somewhere.php.il" method="post">

      <input type="text" name="full-name" placeholder="Full name" required
        data-lpignore="true" autocomplete="none" />

      <input type="email" name="email" placeholder="Email" required
        data-lpignore="true" autocomplete="none" />

      <input type="text" name="subject" placeholder="Subject" required
        data-lpignore="true" autocomplete="none" />

      <textarea name="message" placeholder="Message..." required></textarea>

      <button type="submit">
        Send
      </button>
    </form>

  </div></div>
</main>
