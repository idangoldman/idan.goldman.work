---
layout: default
---

<!-- Say Hello -->
<main id="say-hello" class="container">
  <div class="row is-aligned-center"><div class="xsmall-11 large-10 column">

    <!-- Content -->
    {% include content.liquid title=page.title content=content %}

    <!-- Contact -->
    <form id="contact-form"
      name="contact-form" action="{{ site.third_party.formspree_url }}" method="post">

      <input type="hidden" name="_next" value="{{ site.url }}{{ page.url }}?success" />

      <input type="text" name="full-name" placeholder="Full name" required
        data-lpignore="true" autocomplete="none" />

      <input type="email" name="_replyto" placeholder="Email" required
        data-lpignore="true" autocomplete="none" />

      <input type="text" name="_subject" placeholder="Subject" required
        data-lpignore="true" autocomplete="none" />

      <textarea name="message" placeholder="Message..." required></textarea>

      <button type="submit">
        Send
      </button>
    </form>

  </div></div>
</main>
