---
layout: default
---

<!-- Notebook -->
<main id="notebook" class="container">
  <div class="row is-aligned-center"><div class="xsmall-11 large-10 column">

    <!-- Content -->
    {% include content.liquid title=page.title content=content %}

    <!-- Notes -->
    <ul id="notes">
      {% for post in site.posts %}

        <!-- Note -->
        <li class="note">

          <!-- Title -->
          <h2>
            <a href="{{ post.url }}">
              {{ post.title }}
            </a>
          </h2>

          <!-- Date -->
          {% include formatted_date.liquid date=post.date %}

          <!-- Excerpt -->
          {{ post.excerpt }}
        </li>
      {% endfor %}
    </ul>
  </div></div>
</main>
