---
layout: default
---

<!-- Notebook -->
<main id="notebook" class="container">
  <div class="row is-aligned-center"><div class="ten column">

    <!-- Content -->
    <article id="content">
      <h1>
        {{ page.title }}
      </h1>

      {{ content }}
    </article>

    <!-- Notes -->
    <ul id="notes">
      {% for post in site.posts %}
        <li class="note">
          <h2>
            <a href="{{ post.url }}">
              {{ post.title }}
            </a>
          </h2>

          {% include formatted_date.liquid date=post.date %}
        </li>
      {% endfor %}
    </ul>
  </div></div>
</main>
