<header id="header">

  <!-- Background Image -->
  <div id="background" role="presentation"
    style="background-image: url('{{ page.header.header_image_path | default: include.content.header_image_path }}');">
  </div>

  <div class="container"><div class="row is-aligned-center"><div class="xsmall-11 large-10 column"><div class="row is-aligned-items-center">

    <div class="xsmall-12 medium-4 column">

      <!-- Avatar -->
      <img id="avatar"
        src="{{ page.header.avatar_image_path | default: include.content.avatar_image_path }}" />

    </div>

    <div class="xsmall-12 medium-8 column">

      <!-- Author -->
      <mark id="author" class="marked">
        {{ page.header.author | default: include.content.author }}
      </mark>

      <!-- HeadLine -->
      <mark id="headline" class="marked">
        {{ page.header.headline | default: include.content.headline }}
      </mark>

      <!-- Menu -->
      <nav id="menu">
        {% for item in include.content.menu %}
          {% assign current_class = '' %}

          {% if page.url == item.link or (item.link != '/' and page.url contains item.link) %}
            {% assign current_class = 'current' %}
          {% endif %}

          <a href="{{ item.link }}" class="link {{ current_class }}">
            {{ item.name }}
          </a>
        {% endfor %}
      </nav>

    </div>
  </div></div></div></div>

</header>
