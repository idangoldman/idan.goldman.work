<aside id="sidebar">

  <!-- Background Image -->
  <div id="background" role="presentation"
    data-background-image-path="{{ include.content.background_image_path }}">
  </div>

  <!-- Author -->
  <mark id="author" class="marked">
    {{ include.content.author }}
  </mark>

  <!-- HeadLine -->
  <mark id="headline" class="marked">
    {{ include.content.headline }}
  </mark>

  <!-- Menu -->
  <nav id="menu">
    {% for item in include.content.menu %}
      <a href="{{ item.link }}" class="link">{{ item.name }}</a>
    {% endfor %}
  </nav>

  <!-- Social Menu -->
  <nav id="social-menu">
    {% for item in include.content.social_menu %}
      <a href="{{ item.link }}" data-title="{{ item.name }}" class="link" target="_blank">
        {% svg "{{ site.social_icons_folder_path }}{{ item.name }}.svg" %}
      </a>
    {% endfor %}
  </nav>

</aside>
